@import "fn.styl"

.wid
	width:1200px;
	margin:0 auto;

.public-a
	width 100%
	height 100%
	display block
	
back(path)
	background url(../img/path) center top no-repeat
	

.header
	border-bottom 3px solid #fde401
	height 338px
	back("91bed2fdffbb665b9f3e99b7972b6fba_1920x338.jpg")
	
.bg
	background #026ce2
	height 100%
	
.container
	width 1450px
	margin 0 auto
	.left-box
		width 1110px
		float left
		


.tabs
	width 100%
	heightL(58px)
	background url("../img/9e2e86e4ee55729efc0dba5f121ceb3f_24x57.jpg") left center
	padding 0 7px
	overflow hidden
	span
		position relative
		heightL(38px)
		font-size 22px
		color #fff
		display inline-block
		border 1px solid #fff
		border-radius 5px
		padding 0 28px
		margin 10px 14px 0 0
		cursor pointer
		&:hover
			border-color #feef6b
			color #feef6b
			background #034da2
		&.acti
			border-color #feef6b
			color #feef6b
			background #034da2
			&:after
				sjx(-12px,50%,10px,10px,11px,#feef6b)
			&:before
				z-index 1
				sjx(-11px,50%,9px,9px,11px,#034da2)

				
.item
	padding-top 10px
	background #fff
	.box
		width 100%
		display table
		padding-bottom 30px
		table
			width 100%
			border-collapse collapse
			tr
				width 100%
				background #efefef
				&:nth-child(even)
					background #d6e1ed
				&:first-child
					td
						background #1c355e !important
						color #fff !important
						text-align center !important
				td
					width 10%
					font-size 16px
					color #1c355e
					line-height 1.4
					padding 5px 0
					vertical-align middle
					padding-left 20px
					text-align center
					&:first-child
						color #322a2a
					i
						width 39px
						height 36px
						border 2px solid #fff
						border-radius 50%
						overflow hidden
						display inline-block
						vertical-align middle
						img
							width 100%
							min-height 100%
					span
						color #f00
					var
						position relative
						top 3px
						font-weight bold
						margin 0 3px
						

.right-box
	width 330px
	float right
	background #fff